```turtle
@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

:LegalEntityShape a sh:NodeShape ;
    sh:targetClass :LegalEntity ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Legal entities must have a label" ] .

:ObligationShape a sh:NodeShape ;
    sh:targetClass :Obligation ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Obligations must have a label" ] .

:RegulationRuleShape a sh:NodeShape ;
    sh:targetClass :RegulationRule ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Regulation rules must have a label" ] ;
    sh:property [ sh:path :subject ; sh:minCount 1 ; sh:message "Regulation rules must specify a subject" ] ;
    sh:property [ sh:path :appliesTo ; sh:minCount 1 ; sh:message "Regulation rules must specify what they apply to" ] ;
    sh:property [ sh:path :incorporates ; sh:minCount 1 ; sh:message "Regulation rules must incorporate at least one directive" ] ;
    sh:property [ sh:path :requires ; sh:minCount 1 ; sh:message "Regulation rules must require at least one obligation" ] .

:EU_DirectiveShape a sh:NodeShape ;
    sh:targetClass :EU_Directive ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Directives must have a label" ] ;
    sh:property [ sh:path :concerns ; sh:minCount 1 ; sh:message "Directives must specify what they concern" ] .
```