```turtle
@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:ICSSOComplianceShape a sh:NodeShape ;
    sh:targetClass :CentralGovernmentBody ;
    sh:property [
        sh:path :hasICSSO ;
        sh:minCount 1 ;
        sh:message "Central Government Body must have a designated Information and Communications Systems Security Officer." ;
        sh:severity sh:Violation
    ] .

:ICSSOSpecificationShape a sh:NodeShape ;
    sh:targetClass :ICSSO ;
    sh:property [
        sh:path :role ;
        sh:hasValue :ITSpecialist ;
        sh:message "The ICSSO must be an IT Specialist." ;
        sh:severity sh:Violation
    ] .

```