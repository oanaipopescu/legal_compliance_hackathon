```turtle
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix : <http://example.org#> .

:StandardAdoptionShape a sh:NodeShape ;
    sh:targetClass :NationalCybersecurityAuthority ;
    sh:property [
        sh:path :hasStandardAdoptionMeasure ;
        sh:minCount 1 ;
        sh:message "National Cybersecurity Authority must have at least one standard adoption measure." ;
        sh:severity sh:Violation
    ] .

:NoSpecificTechnologyImpositionShape a sh:NodeShape ;
    sh:targetClass :NationalCybersecurityAuthority ;
    sh:property [
        sh:path :usesSpecificTechnology ;
        sh:maxCount 0 ;
        sh:message "National Cybersecurity Authority must not impose or favor specific technology." ;
        sh:severity sh:Violation
    ] .

:ENISAGuidlineConsiderationShape a sh:NodeShape ;
    sh:targetClass :NationalCybersecurityAuthority ;
    sh:property [
        sh:path :considersENISAGuidlines ;
        sh:minCount 1 ;
        sh:message "National Cybersecurity Authority must consider ENISA guidelines." ;
        sh:severity sh:Violation
    ] .
```