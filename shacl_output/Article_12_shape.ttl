```turtle
@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

:VulnerabilityDisclosureShape a sh:NodeShape ;
    sh:targetClass :NationalCybersecurityAuthority_CSIRT ;
    sh:property [
        sh:path :hasVulnerabilityDisclosureProcess ;
        sh:minCount 1 ;
        sh:message "National Cybersecurity Authority CSIRT must have a vulnerability disclosure process defined." ;
        sh:severity sh:Violation
    ], [
        sh:path :hasVulnerabilityReportingAssistance ;
        sh:minCount 1 ;
        sh:message "National Cybersecurity Authority CSIRT must provide assistance to vulnerability reporters." ;
        sh:severity sh:Violation
    ], [
        sh:path :hasDisclosureScheduleNegotiationProcess ;
        sh:minCount 1 ;
        sh:message "National Cybersecurity Authority CSIRT must have a process for negotiating disclosure schedules." ;
        sh:severity sh:Violation
    ] .

:AnonymousVulnerabilityReportingShape a sh:NodeShape ;
    sh:targetClass :CSIRT ;
    sh:property [
        sh:path :supportsAnonymousReporting ;
        sh:hasValue "true" ;
        sh:message "CSIRT must support anonymous vulnerability reporting." ;
        sh:severity sh:Violation
    ] .

:CrossBorderVulnerabilityCooperationShape a sh:NodeShape ;
    sh:targetClass :NationalCybersecurityAuthority_CSIRT ;
    sh:property [
        sh:path :cooperatesWith ;
        sh:minCount 1 ;
        sh:message "National Cybersecurity Authority CSIRT must cooperate with other CSIRTs." ;
        sh:severity sh:Violation
    ] .
```