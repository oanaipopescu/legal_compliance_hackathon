@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:ProportionalSupervisionFeeShape a sh:NodeShape ;
    sh:targetClass :EntitiesUnderNCSASupervision ;
    sh:property [
        sh:path :paysProportionalSupervisionFee ;
        sh:minCount 1 ;
        sh:message "Entities under the supervision of the National Cybersecurity Authority must pay a proportional supervision fee." ;
        sh:severity sh:Violation
    ] .

:ProportionalAuditFeeShape a sh:NodeShape ;
    sh:targetClass :EntitiesUnderNCSASupervision ;
    sh:property [
        sh:path :paysProportionalAuditFee ;
        sh:minCount 1 ;
        sh:message "Entities under the supervision of the National Cybersecurity Authority must pay a proportional audit fee." ;
        sh:severity sh:Violation
    ] .

:AssignmentOfControlTasksShape a sh:NodeShape ;
    sh:targetClass :EntitiesUnderNCSASupervision ;
    sh:property [
        sh:path :hasAssignedControlTasks ;
        sh:minCount 1 ;
        sh:message "Entities under the supervision of the National Cybersecurity Authority must have assigned control tasks." ;
        sh:severity sh:Violation
    ] .

:CompensationForControlBodiesShape a sh:NodeShape ;
    sh:targetClass :InspectorsOfNCSA, :InspectorsOfPublicAdministration, :CertifiedSME ;
    sh:property [
        sh:path :receivesCompensation ;
        sh:minCount 1 ;
        sh:message "Inspectors of the NCSA, inspectors of public administration, and certified SMEs must receive compensation." ;
        sh:severity sh:Violation
    ] .

:SupervisionAndControlShape a sh:NodeShape ;
    sh:targetClass :NationalCybersecurityAuthority ;
    sh:property [
        sh:path :conductsSupervisionAndControl ;
        sh:minCount 1 ;
        sh:message "The National Cybersecurity Authority must conduct supervision and control." ;
        sh:severity sh:Violation
    ] .
