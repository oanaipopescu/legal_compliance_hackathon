```turtle
@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:Article43Shape a sh:NodeShape ;
    sh:targetClass :LegalEntity ;
    sh:property [
        sh:path :hasLicense ;
        sh:minCount 2 ;
        sh:message "Legal Entity must possess at least two licenses: Operating Permit and Service Provision License.";
        sh:severity sh:Violation
    ] .

:OperatingPermitShape a sh:NodeShape ;
    sh:targetClass :OperatingPermit ;
    sh:property [
        sh:path :requires ;
        sh:minCount 10 ;
        sh:message "Operating Permit must include at least ten required documents/certificates.";
        sh:severity sh:Violation
    ] .

:ServiceProvisionLicenseShape a sh:NodeShape ;
    sh:targetClass :ServiceProvisionLicense ;
    sh:property [
        sh:path :requires ;
        sh:minCount 4 ;
        sh:message "Service Provision License must include at least four required documents/certificates.";
        sh:severity sh:Violation
    ] .
