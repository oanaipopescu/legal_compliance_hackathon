```turtle
@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

:CSIRTDesignationShape a sh:NodeShape ;
    sh:targetClass :LegalEntity ;
    sh:property [
        sh:path :role ;
        sh:hasValue :CSIRT ;
        sh:message "Legal entities must have a designated CSIRT role." ;
        sh:severity sh:Violation
    ] .

:CSIRTCoordinationShape a sh:NodeShape ;
    sh:targetClass :LegalEntity ;
    sh:property [
        sh:path :role ;
        sh:hasValue :NationalCSIRT ;
        sh:message "National Cybersecurity Authority must have a National CSIRT role for coordination." ;
        sh:severity sh:Violation
    ] .

