```turtle
@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

:IncidentReportingShape a sh:NodeShape ;
    sh:targetClass :CSIRT ;
    sh:property [
        sh:path :IncidentReporting ;
        sh:minCount 1 ;
        sh:message "CSIRTs must have an Incident Reporting mechanism in place." ;
        sh:severity sh:Violation
    ] .

:NCSANotificationToCSIRTshape a sh:NodeShape ;
    sh:targetClass :NationalCybersecurityAuthority ;
    sh:property [
        sh:path :NCSANotificationToCSIRT ;
        sh:minCount 1 ;
        sh:message "The NCSA must have a mechanism for notifying CSIRTs." ;
        sh:severity sh:Violation
    ] .

:CSIRTNotificationToNCSAshape a sh:NodeShape ;
    sh:targetClass :CSIRT ;
    sh:property [
        sh:path :CSIRTNotificationToNCSA ;
        sh:minCount 1 ;
        sh:message "CSIRTs must have a mechanism for notifying the NCSA." ;
        sh:severity sh:Violation
    ] .

:InterCSIRTcooperationShape a sh:NodeShape ;
    sh:targetClass :CSIRT ;
    sh:property [
        sh:path :InterCSIRTcooperation ;
        sh:minCount 1 ;
        sh:message "CSIRTs must cooperate with each other." ;
        sh:severity sh:Violation
    ] .

:InformationExchangeShape a sh:NodeShape ;
    sh:targetClass :NationalCybersecurityAuthority ;
    sh:property [
        sh:path :InformationExchange ;
        sh:minCount 1 ;
        sh:message "The NCSA must have a mechanism for information exchange." ;
        sh:severity sh:Violation
    ] .

:CooperationWithAuthoritiesShape a sh:NodeShape ;
    sh:targetClass :NationalCybersecurityAuthority, :CSIRT ;
    sh:property [
        sh:path :CooperationWithAuthorities ;
        sh:minCount 1 ;
        sh:message "The NCSA and CSIRTs must cooperate with other authorities." ;
        sh:severity sh:Violation
    ] .

:RegularInformationExchangeShape a sh:NodeShape ;
    sh:targetClass :NationalCybersecurityAuthority, :Directive2022_2557_Authorities, :Regulation910_2014_Authorities, :Regulation2022_2554_Authorities, :Directive2018_1972_Authorities ;
    sh:property [
        sh:path :RegularInformationExchange ;
        sh:minCount 1 ;
        sh:message "Regular information exchange is required." ;
        sh:severity sh:Violation
    ] .

:AssistanceToNCSAShape a sh:NodeShape ;
    sh:targetClass :NationalSectorialFocalPoints ;
    sh:property [
        sh:path :AssistanceToNCSA ;
        sh:minCount 1 ;
        sh:message "National Sectorial Focal Points must assist the NCSA." ;
        sh:severity sh:Violation
    ] .
