```turtle
@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:FinancialStatementsSubmissionShape a sh:NodeShape ;
    sh:targetClass :ConstructionCompanies ;
    sh:property [
        sh:path :hasSubmittedFinancialStatements ;
        sh:minCount 1 ;
        sh:message "Construction companies must submit annual financial statements." ;
        sh:severity sh:Violation
    ], [
        sh:path :submissionDate ;
        sh:datatype xsd:date ;
        sh:minInclusive "2025-02-19"^^xsd:date ;
        sh:message "Financial statements must be submitted by 2025-02-19." ;
        sh:severity sh:Violation
    ] .

:ActivityReportSubmissionShape a sh:NodeShape ;
    sh:targetClass :ConstructionCompanies ;
    sh:property [
        sh:path :hasSubmittedActivityReport ;
        sh:minCount 1 ;
        sh:message "Construction companies must submit activity reports." ;
        sh:severity sh:Violation
    ], [
        sh:path :reportSubmissionDate ;
        sh:datatype xsd:date ;
        sh:minInclusive "2025-02-19"^^xsd:date ;
        sh:message "Activity reports must be submitted by 2025-02-19." ;
        sh:severity sh:Violation
    ] .
```