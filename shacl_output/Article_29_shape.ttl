:EnhancedCybersecurityMeasuresShape a sh:NodeShape ;
    sh:targetClass :PublicElectronicCommunicationsServiceProvider ;
    sh:property [
        sh:path :hasEnhancedCybersecurityMeasures ;
        sh:minCount 1 ;
        sh:message "Public Electronic Communications Service Providers must have Enhanced Cybersecurity Measures in place." ;
        sh:severity sh:Violation
    ] .

:IncidentNotificationADAEshape a sh:NodeShape ;
    sh:targetClass :PublicElectronicCommunicationsServiceProvider ;
    sh:property [
        sh:path :reportedIncidentToADAE ;
        sh:minCount 1 ;
        sh:message "Public Electronic Communications Service Providers must report incidents to ADAE without delay when there is a significant impact on network and service operation." ;
        sh:severity sh:Violation
    ] .

:IncidentNotificationNACAshape a sh:NodeShape ;
    sh:targetClass :PublicElectronicCommunicationsServiceProvider ;
    sh:property [
        sh:path :reportedIncidentToNACA ;
        sh:minCount 1 ;
        sh:message "Public Electronic Communications Service Providers must report incidents to NACA without delay." ;
        sh:severity sh:Violation
    ] .
