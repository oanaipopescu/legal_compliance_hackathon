@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:Article25Shape a sh:NodeShape ;
    sh:targetClass :SignificantEntities ;
    sh:property [
        sh:path :hasRiskAssessment ;
        sh:minCount 1 ;
        sh:message "Significant Entities must have at least one risk assessment (Article 25)." ;
        sh:severity sh:Violation
    ], [
        sh:path :hasRiskAssessment ;
        sh:property [
            sh:path :criteria ;
            sh:pattern "^Objective, Impartial, Fair and Transparent.*$" ;
            sh:message "Risk assessment criteria must be Objective, Impartial, Fair and Transparent (Article 25)." ;
            sh:severity sh:Violation
        ]
    ] .

