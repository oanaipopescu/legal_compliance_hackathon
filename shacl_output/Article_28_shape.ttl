@prefix : <http://example.org#> .

:MutualAssistanceShape a sh:NodeShape ;
    sh:targetClass :Entity ;
    sh:property [
        sh:path :hasInformationSharing;
        sh:minCount 1 ;
        sh:message "Article 28 requires information sharing with other Member States' Competent Authorities." ;
        sh:severity sh:Violation
