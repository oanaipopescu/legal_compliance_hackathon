@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:ContractRenewalShape a sh:NodeShape ;
    sh:targetClass :ContractRenewal ;
    sh:property [
        sh:path :employmentType ;
        sh:hasValue :PrivateLawFixedTermContract ;
        sh:message "The employment type must be 'Private Law Fixed-Term Employment Contract'." ;
        sh:severity sh:Violation
    ], [
        sh:path :specialization ;
        sh:hasValue :DriverTraining ;
        sh:message "The specialization must be 'Driver Training'." ;
        sh:severity sh:Violation
    ], [
        sh:path :until ;
        sh:hasValue :ProjectCompletion_OASTH ;
        sh:message "The contract must end upon completion of the OASTH project." ;
        sh:severity sh:Violation
    ], [
        sh:path :maximumDuration ;
        sh:datatype xsd:date ;
        sh:maxInclusive "2025-06-30"^^xsd:date ;
        sh:message "The maximum duration must be before 2025-06-30." ;
        sh:severity sh:Violation
    ] .

:SOX1_2023_ContractShape a sh:NodeShape ;
    sh:targetClass :Contract ;
    sh:property [
        sh:path :appliesTo ;
        sh:hasValue :OASTH_Drivers_SOX1_2023 ;
        sh:message "Contracts must apply to OASTH drivers hired under SOX 1/2023" ;
        sh:severity sh:Violation
    ], [
        sh:path :numberOfContracts ;
        sh:minCount 150 ;
        sh:message "Minimum 150 contracts required for this SOX 1/2023 group" ;
        sh:severity sh:Violation
    ] .

:SOX1_2024_ContractShape a sh:NodeShape ;
    sh:targetClass :Contract ;
    sh:property [
        sh:path :appliesTo ;
        sh:hasValue :OASTH_Drivers_SOX1_2024 ;
        sh:message "Contracts must apply to OASTH drivers hired under SOX 1/2024" ;
        sh:severity sh:Violation
    ], [
        sh:path :numberOfContracts ;
        sh:minCount 40 ;
        sh:message "Minimum 40 contracts required for this SOX 1/2024 group" ;
        sh:severity sh:Violation
    ] .
