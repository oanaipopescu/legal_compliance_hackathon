```turtle
@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:RegulationRuleShape a sh:NodeShape ;
    sh:targetClass :RegulationRule ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Regulation Rule must have a label" ] ;
    sh:property [ sh:path :subject ; sh:minCount 1 ; sh:message "Regulation Rule must have a subject" ] ;
    sh:property [ sh:path :amends ; sh:minCount 1 ; sh:message "Regulation Rule must specify what it amends" ] ;
    sh:property [ sh:path :requires ; sh:minCount 1 ; sh:message "Regulation Rule must require at least one obligation" ] .

:LegalProvisionShape a sh:NodeShape ;
    sh:targetClass :LegalProvision ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Legal Provision must have a label" ] ;
    sh:property [ sh:path :definedIn ; sh:message "Legal Provision should specify where it is defined (optional)" ] .

:NationalLawShape a sh:NodeShape ;
    sh:targetClass :NationalLaw ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "National Law must have a label" ] .

:AmendmentShape a sh:NodeShape ;
    sh:targetClass :Amendment ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Amendment must have a label" ] ;
    sh:property [ sh:path :requires ; sh:minCount 1 ; sh:message "Amendment must specify what it requires" ] .

:ObligationShape a sh:NodeShape ;
    sh:targetClass :Obligation ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Obligation must have a label" ] ;
    sh:property [ sh:path :issuedBy ; sh:message "Obligation should specify who issues it (optional)" ] ;
    sh:property [ sh:path :basedOn ; sh:message "Obligation may specify its legal basis (optional)" ] ;
    sh:property [ sh:path :publishedOn ; sh:message "Obligation may specify publication channels (optional)" ] ;
    sh:property [ sh:path :appliesTo ; sh:message "Obligation may specify what it applies to (optional)" ] ;
    sh:property [ sh:path :deadline ; sh:datatype xsd:string ; sh:message "Obligation may have a deadline (optional)" ] ;
    sh:property [ sh:path :stages ; sh:message "Obligation may specify stages (optional)" ] ;
    sh:property [ sh:path :carriedOutBy ; sh:message "Obligation may specify who carries it out (optional)" ] .

:DecisionShape a sh:NodeShape ;
    sh:targetClass :Decision ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Decision must have a label" ] ;
    sh:property [ sh:path :basedOn ; sh:message "Decision may specify its legal basis (optional)" ] .

:RecommendationShape a sh:NodeShape ;
    sh:targetClass :Recommendation ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Recommendation must have a label" ] .

:WebsiteShape a sh:NodeShape ;
    sh:targetClass :Website ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Website must have a label" ] .

:LegalEntityShape a sh:NodeShape ;
    sh:targetClass :LegalEntity ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Legal Entity must have a label" ] .

:StageShape a sh:NodeShape ;
    sh:targetClass :Stage ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Stage must have a label" ] .

:InformationSystemShape a sh:NodeShape ;
    sh:targetClass :InformationSystem ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Information System must have a label" ] .

:AdditionShape a sh:NodeShape ;
    sh:targetClass :Addition ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Addition must have a label" ] ;
    sh:property [ sh:path :requires ; sh:minCount 1 ; sh:message "Addition must specify what it requires" ] .

```