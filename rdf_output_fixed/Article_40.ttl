:TravelExpenses a :Compensation ;
    rdfs:label "Travel expenses" ;
    :includes :TravelExpense, :OvernightExpense, :DailyAllowance .

:TravelExpense a :ExpenseItem ;
    rdfs:label "Travel Expenses" .

:OvernightExpense a :ExpenseItem ;
    rdfs:label "Overnight Expenses" .

:DailyAllowance a :ExpenseItem ;
    rdfs:label "Daily Allowance" .

:CompensationLimit a :Limit ;
    rdfs:label "Compensation Limit" ;
    :maximumValue "TripleMonthlyMaximumSalaryLimit" ;
    :appliesFrom "2024-11-01"^^xsd:date ;
    :exception :InsufficientRheumatologyNeurologyPsychiatrySpecialists .

:TripleMonthlyMaximumSalaryLimit a :MonetaryValue ;
    rdfs:label "Three times the monthly maximum salary limit" ;
    :definedIn :Article28_paragraph1_Law4354_2015 .

:Article28_paragraph1_Law4354_2015 a :LegalBasis ;
    rdfs:label "paragraph 1 of Article 28 of Law 4354/2015" .

:Law4354_2015 a :NationalLaw ;
    rdfs:label "Law 4354/2015" .

:InsufficientRheumatologyNeurologyPsychiatrySpecialists a :Condition ;
    rdfs:label "Insufficient number of rheumatology, neurology, and psychiatry specialists" ;
    :compensationLimit :FiveTimesMonthlyMaximumSalaryLimit .

:FiveTimesMonthlyMaximumSalaryLimit a :MonetaryValue ;
    rdfs:label "Five times the monthly maximum salary limit" ;
    :definedIn :Article28_paragraph1_Law4354_2015 .

:KEPA a :LegalEntity ;
