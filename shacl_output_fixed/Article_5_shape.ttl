@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:CybersecurityRiskManagementMeasuresShape a sh:NodeShape ;
    sh:targetClass :KeyEntities ;
    sh:property [
        sh:path :hasCybersecurityRiskManagementMeasures ;
        sh:minCount 1 ;
        sh:message "Key Entities must have Cybersecurity Risk Management Measures in place." ;
        sh:severity sh:Violation
    ] .

:SignificantIncidentNotificationShape a sh:NodeShape ;
    sh:targetClass :KeyEntities ;
    sh:property [
        sh:path :hasSignificantIncidentNotification ;
        sh:minCount 1 ;
        sh:message "Key Entities must have a Significant Incident Notification process." ;
        sh:severity sh:Violation
    ] .

:ImmediateAccessToNotificationsShape a sh:NodeShape ;
    sh:targetClass :SignificantEntities ;
    sh:property [
        sh:path :hasImmediateAccessToNotifications ;
        sh:minCount 1 ;
        sh:message "Significant Entities must have Immediate Access to Incident Notifications." ;
        sh:severity sh:Violation
    ] .