@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

:RegulationRuleShape a sh:NodeShape ;
    sh:targetClass :RegulationRule ;
    sh:property [ sh:path :purpose ; sh:minCount 1 ; sh:message "Regulation Rule must have a purpose" ] ;
    sh:property [ sh:path :incorporates ; sh:minCount 1 ; sh:message "Regulation Rule must incorporate at least one directive" ] .

:EU_DirectiveShape a sh:NodeShape ;
    sh:targetClass :EU_Directive ;
    sh:property [ sh:path :concerns ; sh:minCount 1 ; sh:message "Directive must specify what it concerns" ] ;
    sh:property [ sh:path :amends ; sh:message "Directive should specify what it amends (optional)" ] ;
    sh:property [ sh:path :repeals ; sh:message "Directive should specify what it repeals (optional)" ] .

:EU_RegulationShape a sh:NodeShape ;
    sh:targetClass :EU_Regulation ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Regulation must have a label" ] .