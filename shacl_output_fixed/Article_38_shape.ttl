@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:RegulationRuleShape a sh:NodeShape ;
    sh:targetClass :RegulationRule ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Regulation Rule must have a label" ] ;
    sh:property [ sh:path :subject ; sh:minCount 1 ; sh:message "Regulation Rule must have a subject" ] ;
    sh:property [ sh:path :partOf ; sh:minCount 1 ; sh:message "Regulation Rule must specify the law it is part of" ] ;
    sh:property [ sh:path :requires ; sh:minCount 1 ; sh:message "Regulation Rule must require at least one obligation" ] .

:NationalLawShape a sh:NodeShape ;
    sh:targetClass :NationalLaw ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "National Law must have a label" ] .

:ObligationShape a sh:NodeShape ;
    sh:targetClass :Obligation ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Obligation must have a label" ] ;
    sh:property [ sh:path :conditions ; sh:message "Obligation may specify conditions (optional)" ] ;
    sh:property [ sh:path :appliesTo ; sh:message "Obligation may specify what it applies to (optional)" ] ;
    sh:property [ sh:path :maximumDuration ; sh:message "Obligation may specify a maximum duration (optional)" ] ;
    sh:property [ sh:path :maximumAge ; sh:datatype xsd:integer ; sh:message "Obligation may specify a maximum age (optional)" ] ;
    sh:property [ sh:path :employmentType ; sh:message "Obligation may specify employment type (optional)" ] ;
    sh:property [ sh:path :requires ; sh:message "Obligation may specify requirements (optional)" ] ;
    sh:property [ sh:path :carriedOutBy ; sh:message "Obligation may specify who carries it out (optional)" ] ;
    sh:property [ sh:path :to ; sh:message "Obligation may specify the recipient (optional)" ] ;
    sh:property [ sh:path :deadline ; sh:message "Obligation may specify a deadline (optional)" ] ;
    sh:property [ sh:path :conditionalOn ; sh:message "Obligation may be conditional (optional)" ] ;
    sh:property [ sh:path :notUsedIn ; sh:message "Obligation may specify processes it is not used in (optional)" ] ;
    sh:property [ sh:path :consideredAs ; sh:message "Obligation may specify how it is considered (optional)" ] .


