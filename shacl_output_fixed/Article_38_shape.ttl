    sh:property [ sh:path :maySpecializeIn ; sh:message "Legal Entity may specify specializations (optional)" ] ;
    sh:property [ sh:path :issuedBy ; sh:message "Legal Entity may specify who issued it (optional)" ] ;
    sh:property [ sh:path :finances ; sh:message "Legal Entity may specify what it finances (optional)" ] ;
    sh:property [ sh:path :role ; sh:message "Legal Entity may specify its role (optional)" ] ;
    sh:property [ sh:path :conducts ; sh:message "Legal Entity may specify what it conducts (optional)" ] ;
    sh:property [ sh:path :responsibleFor ; sh:message "Legal Entity may specify what it is responsible for (optional)" ] ;
    sh:property [ sh:path :mayActAs ; sh:message "Legal Entity may specify roles it may act as (optional)" ] ;
    sh:property [ sh:path :approvedBy ; sh:message "Legal Entity may specify who approved it (optional)" ] ;
    sh:property [ sh:path :appliesTo ; sh:message "Legal Entity may specify what it applies to (optional)" ] .


