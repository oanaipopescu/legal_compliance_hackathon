@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:RegulationRuleShape a sh:NodeShape ;
    sh:targetClass :RegulationRule ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Regulation Rule must have a label" ] ;
    sh:property [ sh:path :subject ; sh:minCount 1 ; sh:message "Regulation Rule must have a subject" ] ;
    sh:property [ sh:path :amends ; sh:minCount 1 ; sh:message "Regulation Rule must specify what it amends" ] ;
    sh:property [ sh:path :requires ; sh:minCount 1 ; sh:message "Regulation Rule must require at least one obligation" ] .

:ObligationShape a sh:NodeShape ;
    sh:targetClass :Obligation ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Obligation must have a label" ] ;
    sh:property [ sh:path :details ; sh:minCount 1 ; sh:message "Obligation must have details" ] .

:AmendmentShape a sh:NodeShape ;
    sh:targetClass :Amendment ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Amendment must have a label" ] ;
    sh:property [ sh:path :changes ; sh:minCount 1 ; sh:message "Amendment must specify the changes" ] .

:DateChangeShape a sh:NodeShape ;
    sh:targetClass :DateChange ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Date Change must have a label" ] ;
    sh:property [ sh:path :oldDate ; sh:minCount 1 ; sh:datatype xsd:date ; sh:message "Date Change must have an old date" ] ;
    sh:property [ sh:path :newDate ; sh:minCount 1 ; sh:datatype xsd:date ; sh:message "Date Change must have a new date" ] .

:RephrasingShape a sh:NodeShape ;
    sh:targetClass :Rephrasing ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Rephrasing must have a label" ] ;
    sh:property [ sh:path :text ; sh:minCount 1 ; sh:message "Rephrasing must have text" ] .

:LegalProvisionShape a sh:NodeShape ;
    sh:targetClass :LegalProvision ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Legal Provision must have a label" ] ;
    sh:property [ sh:path :partOf ; sh:message "Legal Provision should specify the part it belongs to (optional)" ] ;
    sh:property [ sh:path :subject ; sh:minCount 1 ; sh:message "Legal Provision must have a subject" ] .

:PartShape a sh:NodeShape ;
    sh:targetClass :Part ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Part must have a label" ] .

:LegalEntityShape a sh:NodeShape ;
    sh:targetClass :LegalEntity ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Legal Entity must have a label" ] ;
    sh:property [ sh:path :bearsCost ; sh:message "Legal Entity may specify costs it bears (optional)" ] .

:CostShape a sh:NodeShape ;
    sh:targetClass :Cost ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Cost must have a label" ] ;
    sh:property [ sh:path :includes ; sh:minCount 1 ; sh:message "Cost must specify included items" ] .

:CostItemShape a sh:NodeShape ;
    sh:targetClass :CostItem ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Cost Item must have a label" ] .