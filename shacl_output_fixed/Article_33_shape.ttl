@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:CompanyPolicyShape a sh:NodeShape ;
    sh:targetClass :CompanyPolicy ;
    sh:property [
        sh:path :costBearingEntity ;
        sh:minCount 1 ;
        sh:message "Company policy must specify the entity bearing payroll costs." ;
        sh:severity sh:Violation
    ], [
        sh:path :costBearingDate ;
        sh:minCount 1 ;
        sh:datatype xsd:date ;
        sh:message "Company policy must specify the date the cost bearing entity changes." ;
        sh:severity sh:Violation
    ] .