@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:EffectiveProportionateDissuasiveMeasuresShape a sh:NodeShape ;
    sh:targetClass :AdministrativeFines ;
    sh:property [
        sh:path :maximumAmount ;
        sh:datatype xsd:decimal ;
        sh:minInclusive 10000000 ;
        sh:message "Administrative fines must have a maximum amount of at least 10,000,000" ;
        sh:severity sh:Violation
    ] .

:PublicationObligationShape a sh:NodeShape;
    sh:targetClass :AdministrativeFines;
    sh:property [
        sh:path :publishedOn;
        sh:minCount 1;
        sh:message "Details of the decision must be published";
        sh:severity sh:Violation
    ] .