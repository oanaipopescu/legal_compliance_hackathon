@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:Article8Shape a sh:NodeShape ;
    sh:targetClass :NationalCybersecurityAuthority ;
    sh:property [
        sh:path :hasCompetentAuthorityDesignation ;
        sh:minCount 1 ;
        sh:message "National Cybersecurity Authority must have a designated Competent Authority." ;
        sh:severity sh:Violation
    ], [
        sh:path :hasSinglePointOfContactDesignation ;
        sh:minCount 1 ;
        sh:message "National Cybersecurity Authority must have a designated Single Point of Contact." ;
        sh:severity sh:Violation
    ], [
        sh:path :hasPublicationOnWebsite ;
        sh:minCount 1 ;
        sh:message "National Cybersecurity Authority must publish its designation on its website." ;
        sh:severity sh:Violation
    ] .