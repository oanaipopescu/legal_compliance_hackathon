@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix : <http://example.org#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:RiskManagementShape a sh:NodeShape ;
    sh:targetClass :CriticalEntities ;
    sh:property [
        sh:path :hasRiskManagementMeasure ;
        sh:minCount 1 ;
        sh:message "Critical entities must have at least one risk management measure defined." ;
        sh:severity sh:Violation
    ] .

:ReportingObligationsShape a sh:NodeShape ;
    sh:targetClass :CriticalEntities ;
    sh:property [
        sh:path :hasReportingObligation ;
        sh:minCount 1 ;
        sh:message "Critical entities must have at least one reporting obligation defined." ;
        sh:severity sh:Violation
    ] .

:InformationExchangeShape a sh:NodeShape ;
    sh:targetClass :CriticalEntities ;
    sh:property [
        sh:path :hasInformationExchangeMechanism ;
        sh:minCount 1 ;
        sh:message "Critical entities must have at least one information exchange mechanism defined." ;
        sh:severity sh:Violation
    ] .