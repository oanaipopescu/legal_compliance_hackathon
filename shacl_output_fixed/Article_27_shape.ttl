@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:NotificationShape a sh:NodeShape ;
    sh:targetClass :NotificationToDPA ;
    sh:property [
        sh:path :timeLimit ;
        sh:pattern "[0-9]+" ;
        sh:message "Time limit must be a positive integer" ;
        sh:severity sh:Violation
    ] .

:NoDuplicateFineShape a sh:NodeShape ;
    sh:targetClass :NoDuplicateFine ;
    sh:property [
        sh:path :conditionalOn ;
        sh:hasValue :DPAImposedFine ;
        sh:message "No Duplicate Fine must be conditional on DPAImposedFine" ;
        sh:severity sh:Violation
    ] .

:InformationToDPAInOtherMemberStateShape a sh:NodeShape ;
    sh:targetClass :InformationToDPAInOtherMemberState ;
    sh:property [
        sh:path :conditionalOn ;
        sh:hasValue :DPAInOtherMemberState ;
        sh:message "Information to DPA in another Member State must be conditional on DPAInOtherMemberState" ;
        sh:severity sh:Violation
    ] .