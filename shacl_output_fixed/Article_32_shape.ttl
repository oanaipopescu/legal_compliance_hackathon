@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:CompanyPolicyShape a sh:NodeShape ;
    sh:targetClass :CompanyPolicy ;
    sh:property [
        sh:path :mentions ;
        sh:minCount 1 ;
        sh:message "Company policy must mention at least one of the repealed provisions.";
        sh:severity sh:Violation
    ] .

:CompanyPolicy a rdf:Class ;
    rdfs:label "Company Policy" .