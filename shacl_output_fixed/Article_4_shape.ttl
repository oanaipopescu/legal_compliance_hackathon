@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix : <http://example.org#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:EntityReportingShape a sh:NodeShape ;
    sh:targetClass :CoreEntities ;
    sh:property [
        sh:path :EntityName ;
        sh:minCount 1 ;
        sh:message "Core Entities must provide their Entity Name." ;
        sh:severity sh:Violation
    ], [
        sh:path :EntityAddress ;
        sh:minCount 1 ;
        sh:message "Core Entities must provide their Entity Address." ;
        sh:severity sh:Violation
    ], [
        sh:path :ContactDetails ;
        sh:minCount 1 ;
        sh:message "Core Entities must provide Contact Details." ;
        sh:severity sh:Violation
    ], [
        sh:path :IPRanges ;
        sh:minCount 1 ;
        sh:message "Core Entities must provide their IP Address Ranges." ;
        sh:severity sh:Violation
    ], [
        sh:path :DomainNames ;
        sh:minCount 1 ;
        sh:message "Core Entities must provide their Domain Names." ;
        sh:severity sh:Violation
    ], [
        sh:path :SectorSubsectorType ;
        sh:minCount 1 ;
        sh:message "Core Entities must provide their Sector, Subsector, and Entity Type." ;
        sh:severity sh:Violation
    ], [
        sh:path :EUCountriesServed ;
        sh:minCount 1 ;
        sh:message "Core Entities must provide the EU Countries they serve." ;
        sh:severity sh:Violation
    ] ;
    .

