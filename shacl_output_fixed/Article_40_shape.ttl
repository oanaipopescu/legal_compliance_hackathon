@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:DoctorCompensationShape a sh:NodeShape ;
    sh:targetClass :Compensation ;
    sh:property [
        sh:path :maximumValue ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:message "Compensation must have a maximum value"
    ], [
        sh:path :appliesFrom ;
        sh:datatype xsd:date ;
        sh:minCount 1 ;
        sh:message "Compensation must have an appliesFrom date"
    ] .

:AnnualTravelLimitShape a sh:NodeShape ;
    sh:targetClass :Limit ;
    sh:property [
        sh:path :maximumValue ;
        sh:datatype xsd:integer ;
        sh:hasValue 90 ;
        sh:message "Annual travel limit must be 90 days"
    ], [
        sh:path :unit ;
        sh:datatype xsd:string ;
        sh:hasValue "days" ;
        sh:message "Annual travel limit unit must be 'days'"
    ] .