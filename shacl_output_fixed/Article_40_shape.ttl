@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:RegulationRuleShape a sh:NodeShape ;
    sh:targetClass :RegulationRule ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Regulation Rule must have a label" ] ;
    sh:property [ sh:path :subject ; sh:minCount 1 ; sh:message "Regulation Rule must have a subject" ] ;
    sh:property [ sh:path :amends ; sh:minCount 1 ; sh:message "Regulation Rule must specify what it amends" ] ;
    sh:property [ sh:path :requires ; sh:minCount 1 ; sh:message "Regulation Rule must require at least one obligation" ] .

:LegalProvisionShape a sh:NodeShape ;
    sh:targetClass :LegalProvision ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Legal Provision must have a label" ] .

:AmendmentShape a sh:NodeShape ;
    sh:targetClass :Amendment ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Amendment must have a label" ] ;
    sh:property [ sh:path :replaces ; sh:minCount 1 ; sh:message "Amendment must specify what it replaces" ] ;
    sh:property [ sh:path :with ; sh:minCount 1 ; sh:message "Amendment must specify the replacement" ] ;
    sh:property [ sh:path :newText ; sh:minCount 1 ; sh:message "Amendment must have new text" ] .

:AdditionShape a sh:NodeShape ;
    sh:targetClass :Addition ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Addition must have a label" ] ;
    sh:property [ sh:path :newText ; sh:minCount 1 ; sh:message "Addition must have new text" ] .

:ChangeShape a sh:NodeShape ;
    sh:targetClass :Change ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Change must have a label" ] ;
    sh:property [ sh:path :oldText ; sh:message "Change should specify the old text (optional)" ] ;
    sh:property [ sh:path :newText ; sh:message "Change should specify the new text (optional)" ] ;
    sh:property [ sh:path :addedText ; sh:message "Change should specify added text (optional)" ] .

:NationalLawShape a sh:NodeShape ;
    sh:targetClass :NationalLaw ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "National Law must have a label" ] .

:LegalEntityShape a sh:NodeShape ;
    sh:targetClass :LegalEntity ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Legal Entity must have a label" ] .

:CompensationShape a sh:NodeShape ;
    sh:targetClass :Compensation ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Compensation must have a label" ] .

:ExpenseItemShape a sh:NodeShape ;
    sh:targetClass :ExpenseItem ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Expense Item must have a label" ] .

:LimitShape a sh:NodeShape ;
    sh:targetClass :Limit ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Limit must have a label" ] ;
    sh:property [ sh:path :maximumValue ; sh:minCount 1 ; sh:message "Limit must have a maximum value" ] ;
    sh:property [ sh:path :appliesFrom ; sh:datatype xsd:date ; sh:message "Limit must have an appliesFrom date" ] ;
    sh:property [ sh:path :unit ; sh:message "Limit should have a unit (optional)" ] ;
    sh:property [ sh:path :exception ; sh:message "Limit may have an exception (optional)" ] .

:MonetaryValueShape a sh:NodeShape ;
    sh:targetClass :MonetaryValue ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Monetary Value must have a label" ] ;
    sh:property [ sh:path :definedIn ; sh:message "Monetary Value should specify its definition (optional)" ] .

:LegalBasisShape a sh:NodeShape ;
    sh:targetClass :LegalBasis ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Legal Basis must have a label" ] .

:ConditionShape a sh:NodeShape ;
    sh:targetClass :Condition ;
    sh:property [ sh:path rdfs:label ; sh:minCount 1 ; sh:message "Condition must have a label" ] ;
    sh:property [ sh:path :compensationLimit ; sh:message "Condition should specify a compensation limit (optional)" ] .