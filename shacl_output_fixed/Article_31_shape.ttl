@prefix : <http://example.org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:Paragraph3aShape a sh:NodeShape ;
    sh:targetClass :TransitionalProvision ;
    sh:property [
        sh:path :maximumDuration ;
        sh:maxCount 1 ;
        sh:datatype xsd:duration ;
        sh:message "Paragraph 3a requires a maximum duration value." ;
        sh:severity sh:Violation
    ] , [
        sh:path :appliesTo ;
        sh:minCount 1 ;
        sh:message "Paragraph 3a must specify who it applies to." ;
        sh:severity sh:Violation
    ] , [
        sh:path :appliesUntil ;
        sh:minCount 1 ;
        sh:message "Paragraph 3a must specify the end date/event." ;
        sh:severity sh:Violation
    ] .

:Paragraph3bShape a sh:NodeShape ;
    sh:targetClass :TransitionalProvision ;
    sh:property [
        sh:path :maximumDuration ;
        sh:maxCount 1 ;
        sh:datatype xsd:duration ;
        sh:message "Paragraph 3b requires a maximum duration value." ;
        sh:severity sh:Violation
    ] , [
        sh:path :appliesTo ;
        sh:minCount 1 ;
        sh:message "Paragraph 3b must specify who it applies to." ;
        sh:severity sh:Violation
    ] , [
        sh:path :appliesUntil ;
        sh:minCount 1 ;
        sh:message "Paragraph 3b must specify the end date/event." ;
        sh:severity sh:Violation
    ] .

:JointDecisionMinistersDigitalGovernanceJusticeShape a sh:NodeShape ;
    sh:targetClass :Decision ;
    sh:property [
        sh:path :deadline ;
        sh:maxCount 1 ;
        sh:datatype xsd:duration ;
        sh:message "The Joint Decision must specify a deadline." ;
        sh:severity sh:Violation
    ] .